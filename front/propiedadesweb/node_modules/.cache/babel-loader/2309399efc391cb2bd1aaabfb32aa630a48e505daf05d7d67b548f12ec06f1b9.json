{"ast":null,"code":"import Card from 'primevue/card';\nimport defaultCasaImage from '@/assets/default-house.jpg';\nimport defaultDepartamentoImage from '@/assets/default-departamento.jpg';\nimport defaultTerrenoImage from '@/assets/default-terreno.jpg';\nexport default {\n  name: 'InmuebleCard',\n  components: {\n    Card\n  },\n  props: {\n    inmueble: {\n      type: Object,\n      required: true\n    }\n  },\n  methods: {\n    formatPrice(price) {\n      return new Intl.NumberFormat('es-CL', {\n        style: 'currency',\n        currency: 'CLP'\n      }).format(price);\n    },\n    getDefaultImage(tipoInmueble) {\n      switch (tipoInmueble) {\n        case 'CASA':\n          return defaultCasaImage;\n        case 'DEPARTAMENTO':\n          return defaultDepartamentoImage;\n        case 'TERRENO':\n          return defaultTerrenoImage;\n        default:\n          return defaultCasaImage;\n      }\n    }\n  }\n};","map":{"version":3,"names":["Card","defaultCasaImage","defaultDepartamentoImage","defaultTerrenoImage","name","components","props","inmueble","type","Object","required","methods","formatPrice","price","Intl","NumberFormat","style","currency","format","getDefaultImage","tipoInmueble"],"sources":["/home/reii23/Usach/proyectoFingeso/front/propiedadesweb/src/components/InmuebleCard.vue"],"sourcesContent":["<template>\n    <Card class=\"inmueble-card\">\n      <template #header>\n        <img :src=\"inmueble.imagen || getDefaultImage(inmueble.tipoInmueble)\" :alt=\"inmueble.direccion\" class=\"inmueble-image\">\n      </template>\n      <template #title>\n        <h3 class=\"inmueble-price\">{{ formatPrice(inmueble.precio) }}</h3>\n      </template>\n      <template #subtitle>\n        <p class=\"inmueble-address\">{{ inmueble.direccion }}</p>\n      </template>\n      <template #content>\n        <div class=\"inmueble-features\">\n          <span><i class=\"pi pi-home\"></i> {{ inmueble.disponible ? 'Disponible' : 'No disponible' }} </span>\n          <span><i class=\"pi pi-check-circle\"></i> {{ inmueble.verificado ? 'Verificado' : 'No verificado' }} </span>\n          <span><i class=\"pi pi-stop\"></i> {{ inmueble.metrosCuadrados}} m2</span>\n        </div>\n      </template>\n    </Card>\n  </template>\n  \n  <script>\n  import Card from 'primevue/card';\n  import defaultCasaImage from '@/assets/default-house.jpg';\n  import defaultDepartamentoImage from '@/assets/default-departamento.jpg';\n  import defaultTerrenoImage from '@/assets/default-terreno.jpg';\n  \n  export default {\n    name: 'InmuebleCard',\n    components: {\n      Card\n    },\n    props: {\n      inmueble: {\n        type: Object,\n        required: true\n      }\n    },\n    methods: {\n      formatPrice(price) {\n        return new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(price);\n      },\n      getDefaultImage(tipoInmueble) {\n        switch (tipoInmueble) {\n          case 'CASA':\n            return defaultCasaImage;\n          case 'DEPARTAMENTO':\n            return defaultDepartamentoImage;\n          case 'TERRENO':\n            return defaultTerrenoImage;\n          default:\n            return defaultCasaImage; \n        }\n      }\n    }\n  }\n  </script>\n  \n  <style scoped>\n  .inmueble-card {\n    width: 100%;\n    margin-bottom: 2rem;\n  }\n  \n  .inmueble-card :deep(.p-card-body) {\n    padding: 0.5rem;\n  }\n  \n  .inmueble-image {\n    width: 100%;\n    height: 200px;\n    object-fit: cover;\n  }\n  \n  .inmueble-price {\n    font-size: 1.4em;\n    font-weight: bold;\n    color: #07e90f;\n    margin: 0;\n  }\n  \n  .inmueble-address {\n    font-size: 1em;\n    color: #666;\n    margin: 0.5rem 0;\n  }\n  \n  .inmueble-features {\n    display: flex;\n    justify-content: space-between;\n    font-size: 0.9em;\n    color: #666;\n  }\n  \n  .inmueble-features span {\n    display: flex;\n    align-items: center;\n  }\n  \n  .inmueble-features i {\n    margin-right: 5px;\n  }\n  </style>"],"mappings